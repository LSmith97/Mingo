<%- include('../partials/header') %>

<% posts.forEach(function(p){ %>
   <div class= 'post-container'>
    <h2><%= p.title  %></h2>
    <p><%= p.body  %></p>
    <a href="/posts/<%=p._id%>"><%=p.comments.length%> Comments</a>
    <%= p.isEdited ? "edited" : "" %>
    </div>
<%})%>

